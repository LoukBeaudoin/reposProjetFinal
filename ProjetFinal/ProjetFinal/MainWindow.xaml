<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ProjetFinal.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ProjetFinal">

    <Grid>
        <NavigationView PaneDisplayMode="Left" PaneTitle="MON TITRE" x:Name="navView" SelectionChanged="navView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Page Activités" x:Name="navHeader"/>
                <NavigationViewItem Content="Page Activités" x:Name="pageActivite" Icon="Add"/>
                <NavigationViewItem Content="Page Admin" x:Name="pageAdmin" Icon="List"/>
                <NavigationViewItem Content="Page Stats" x:Name="pageStats" Icon="Page"/>
            </NavigationView.MenuItems>
            <Frame x:Name="mainWindow" Grid.Row="1" />
        </NavigationView>
    </Grid>
</Window>
