        <Button x:Name="btn_modifier_activite" Content="Modifier Activité" Click="btn_modifier_activite_Click" Grid.Row="2" Grid.Column="1" Margin="0,0,0,20" Background="LightCyan"/>
        <Button x:Name="btn_modifier_seance" Content="Modifier Séance" Click="btn_modifier_seance_Click" Grid.Row="2" Grid.Column="2" Margin="0,0,0,20" Background="LightCyan"/>

        <Button x:Name="btn_supprimer_adherent" Content="Supprimer Adhérent" Click="btn_supprimer_adherent_Click" Grid.Row="3" Grid.Column="0" Background="PaleVioletRed"/>
        <Button x:Name="btn_supprimer_activite" Content="Supprimer Activité" Click="btn_supprimer_activite_Click" Grid.Row="3" Grid.Column="1" Background="PaleVioletRed"/>
        <Button x:Name="btn_supprimer_seance" Content="Supprimer Séance" Click="btn_supprimer_seance_Click" Grid.Row="3" Grid.Column="2" Background="PaleVioletRed"/>-->
    </Grid>
</Page>
